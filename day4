# string manipulation
a = "thanusha"

print(a.upper())  #uppercase
print(a.lower())  #lowercase
print(len(a))     #length of string
print(a.strip())   #giving space
print(a[4])       #index to access an str 

#slicing method
b="infinity"

print(b[2:6])
print(b[:])
print(b[2:3:1])

#escape string

c="am a \n good girl"
print(c)

d="am a \t good boy"
print(d)
