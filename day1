# DAY 03
#input and output in python
boy_name=input("enter boy name: ")
girl_name=input("enter girl name: ")

boy_age=int(input("enter boys age: "))
girl_age=int(input("enter girl age: "))

#formatted string
print(f"{boy_name} is {boy_age} . {girl_name} is {girl_age}")

# DAY 04
# string manipulation
a = "thanusha"

print(a.upper())  #uppercase
print(a.lower())  #lowercase
print(len(a))     #length of string
print(a.strip())   #giving space
print(a[4])       #index to access an str 

#slicing method
b="infinity"

print(b[2:6])
print(b[:])
print(b[2:3:1])

#escape string

c="am a \n good girl"
print(c)

d="am a \t good boy"
print(d)
